pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')  // Replace 'dockerhub' with your credential ID if different
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/arunbaghel11/node-project.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                echo 'Building Docker image...'
                // Build Docker image using Windows-compatible commands
                script {
                    def dockerImage = "arun662/node-project:latest"
                    bat "docker build -t ${dockerImage} ."
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Assuming tests can run directly on Windows
                bat 'npm test'
            }
        }

        stage('Push to DockerHub') {
            when {
                branch 'main'
            }
            steps {
                echo 'Pushing Docker image to DockerHub...'
                script {
                    def dockerImage = "arun662/node-project:latest"
                    bat "docker login -u %DOCKERHUB_CREDENTIALS_USR% -p %DOCKERHUB_CREDENTIALS_PSW%"
                    bat "docker push ${dockerImage}"
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
