pipeline {
    agent any
    environment {
        DOCKER_HUB_REPO = 'arun662/node-project'   // DockerHub repository
        DOCKER_IMAGE_TAG = 'latest'
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    // Specifying the branch name and credentials for Git checkout
                    git branch: 'main', url: 'https://github.com/arunbaghel11/node-project.git', credentialsId: 'github-credentials-id'
                }
            }
        }
        stage('Build') {
            steps {
                echo "Building Docker image..."
                sh 'docker build -t $DOCKER_HUB_REPO:$DOCKER_IMAGE_TAG .'
            }
        }
        stage('Test') {
            steps {
                echo "Running tests..."
                // You can add actual test commands here, e.g., `npm test`
                sh 'echo Tests passed!'
            }
        }
        stage('Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub') {
                        echo "Pushing Docker image to DockerHub..."
                        sh 'docker push $DOCKER_HUB_REPO:$DOCKER_IMAGE_TAG'
                    }
                }
            }
        }
    }
    post {
        success {
            echo "Pipeline succeeded! Triggering CD pipeline..."
            build job: 'cd-pipeline', wait: false  // Triggering CD pipeline
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
